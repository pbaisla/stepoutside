<% provide(:title, 'Change password') %>
<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="card">
      <div class="row">
        <h1>Resend confirmation instructions</h1>  
        <div class="col-xs-offset-1 col-xs-10">

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
<% if devise_error_messages!.empty? %>
<% else %>
<div class="alert alert-warning alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span></button>
  <%= devise_error_messages! %>
</div>
<% end %>  
<div><%= f.label :email %><br />
  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-envelope"></span>
    <%= f.email_field :email, autofocus: true, :class => "form-control input-lg" %></div>
  </div>
  <div><button type="submit" class="btn btn-default">Resend confirmation instructions</button></div>
<% end %>

<%= render "devise/shared/links" %>
        <br><br>
        </div>
      </div>
    </div>
  </div>
</div>
<%= image_tag "login.jpg", :class => "bgimage" %>